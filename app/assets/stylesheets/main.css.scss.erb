html, body{
  height:100%;
  padding: 0;
  margin: 0;
  font-family: Microsoft JhengHei, Arial, sans-serif;
  width: 100%;  
} 
.top_menu{
  position: absolute; 
  left: 50%; 
  margin-left: -610px; 
  background-color: #ffffff; 
  width: 130px;  
}
.top_menu a{
  color: #aeaeae;
}
.top_menu a:hover{
  text-decoration: none;
  opacity: 0.8;
}
.top_menu ul{
  width: 100px;
  text-align: center;
  margin-top: 15px;
}
.top_menu li{
  padding-top: 4px;
  border-top: 1px solid #aeaeae;
}
.menu{
  height: 54px;
  background: transparent url(<%= asset_path 'menu.png'%>) no-repeat; 
  background-size: 100% 100%;
}
.menu a{

}
.menu .nav-pills >li >a {
  -webkit-border-radius: 0;
  -moz-border-radius: 0;
  border-radius: 0;  
  color: #787878;
}
.menu .nav-pills > li > a:hover {
  background-color: #e4e4e4;
}
.menu .nav-pills .active > a {
  background-color: #e4e4e4;
  color: #787878;
}
.menu .nav-pills > li > a:focus {
  background: none;
  color: #787878;  
}
.affix { 
  top:0; 
  z-index: 99999;
}
