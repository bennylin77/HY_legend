html, body{
  height:100%;
  padding: 0;
  margin: 0;
  font-family: Microsoft JhengHei, Arial, sans-serif;  
} 

/*==== first ====*/
.first_section{
  height: 100%;
  min-width: 100%;  
  background: #181a17;  
}
/*==== second ====*/
.second_section{
  height: 400px; 
  min-width: 100%;    
  background: url(<%= asset_path 'sec_bg.png'%>) no-repeat; 
  background-size: 100% 100%;
  color: #444444;
}
/*==== third ====*/
.third_section{
  height: 800px;
  min-width: 100%;  
  background: url(<%= asset_path 'third_bg.png'%>) no-repeat; 
  background-size: 100% 100%;
}
.third_descrip{
  padding: 10px;
  border: 1px solid #f9f7f3;
  background: #e9e3d5;
  opacity: 0.9;
}
.third_descrip_title{
  color: #774718; 
  font-size: 22px; 
}
.third_descrip_cont{
  color: #8a6643;
  font-size: 14px;
  letter-spacing: 0.8px;   
  line-height: 23px;
}
/*==== third_2 ====*/
.third_2_section{
  height: 650px;
  min-width: 100%;  
  background: #e6dcc4; 
  background-size: 100% 100%;
}
/*==== third_3 ====*/
.third_3_section{
  height: 500px;
  min-width: 100%;  
  background: #e6dcc4; 
  background-size: 100% 100%;
}
/*==== forth ====*/
.forth_section{
  height: 100%;
  min-width: 100%;  
  background: #e6dcc4 url(<%= asset_path 'forth_bg.png'%>) no-repeat; 
  background-size: 100% 100%;
}
/*==== fifth ====*/
.fifth_section{
  height: 100%;
  min-width: 100%;  
  background: #c7aa85 url(<%= asset_path 'fifth_bg.png'%>) no-repeat; 
  background-size: 100% 100%;
}
/*==== sixth ====*/
.sixth_section{
  height: 100%;
  min-width: 100%;  
  background: url(<%= asset_path 'sixth_bg.png'%>) no-repeat, -webkit-linear-gradient(#e6dcc4, #ffffff); /* For Safari 5.1 to 6.0 */
  background: url(<%= asset_path 'sixth_bg.png'%>) no-repeat, -o-linear-gradient(#e6dcc4, #ffffff);/* For Firefox 3.6 to 15 */
  background: url(<%= asset_path 'sixth_bg.png'%>) no-repeat, -moz-linear-gradient(#e6dcc4, #ffffff);/* For Firefox 3.6 to 15 */
  background: url(<%= asset_path 'sixth_bg.png'%>) no-repeat, linear-gradient(#e6dcc4, #ffffff);/* For Firefox 3.6 to 15 */  
  background-size: 100% 100%;
}
.sixth_slogan_s{
  color: #ffffff; 
  font-size: 13px;  
}
.sixth_list{
  font-size: 14px;  
  letter-spacing: 2px;
}
.sixth_list dt{
  width: 80px;
}
